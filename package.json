{
    "name": "@rajnandan1/atticus",
    "version": "v1.1.3",
    "description": "A framework-agnostic voice agent library for voice-controlled UI interactions",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch --onSuccess \"npm run demo\"",
        "typecheck": "tsc --noEmit",
        "demo": "serve .",
        "test:d2snap": "node --import tsx test-d2snap/test.js"
    },
    "keywords": [
        "voice",
        "agent",
        "openai",
        "realtime",
        "ui",
        "voice-control",
        "speech"
    ],
    "author": "Raj Nandan",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/rajnandan1/atticus.git"
    },
    "bugs": {
        "url": "https://github.com/rajnandan1/atticus/issues"
    },
    "homepage": "https://github.com/rajnandan1/atticus#readme",
    "dependencies": {
        "@openai/agents": "^0.3.7",
        "turndown": "^7.2.0",
        "turndown-plugin-gfm": "^1.0.2",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "@types/turndown": "^5.0.6",
        "jsdom": "^27.4.0",
        "serve": "^14.2.4",
        "tsup": "^8.5.0",
        "tsx": "^4.21.0",
        "typescript": "^5.8.3"
    }
}
