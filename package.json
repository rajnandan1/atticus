{
    "name": "@rajnandan1/atticus",
    "version": "1.0.2",
    "description": "A framework-agnostic voice agent library for voice-controlled UI interactions",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch --onSuccess \"npm run demo\"",
        "typecheck": "tsc --noEmit",
        "demo": "serve ."
    },
    "keywords": [
        "voice",
        "agent",
        "openai",
        "realtime",
        "ui",
        "voice-control",
        "speech"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@openai/agents": "^0.3.7",
        "@webfuse-com/d2snap": "github:webfuse-com/D2Snap",
        "zod": "^3.25.76"
    },
    "devDependencies": {
        "serve": "^14.2.4",
        "tsup": "^8.5.0",
        "typescript": "^5.8.3"
    }
}
